<% include partials/header %>
<div class="jumbotron">
  <h1 class="display-3">Burgers!</h1>
  <p class="lead">All the best burgers!</p>
  <hr class="my-1" />
  <table class="table">
    <thead>
      <tr>
        <th>Burger Spot</th>
        <th>Devoured?</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% burgers.forEach(burger => { %>
      <tr>
        <td scope="row"><%=burger.burger_name%></td>
        <td><%=burger.devoured === 0 ? "Nope" : "DELICIOUS!"%></td>
        <td class="d-flex justify-content-end">
            <button type="button" name="" data-id="<%=burger.id%>" class="btn btn-primary eat" btn-lg btn-block">Eat
            </button>
          <a href="/burgers/<%=burger.id%>">
            <button class="btn btn-info ml-3">More info</button>
          </a>
        </td>
      </tr>
      <%})%>
    </tbody>
  </table>
<a href="/burgers/new"><button type="button" class="btn btn-secondary btn-lg btn-block">Add a burger</button></a>
</div>
<% include partials/footer %>
